    <!-- Web3.js Script to Interact with Smart Contract -->
    <script>
        let web3;
        let contract;
        const contractAddress = 'YOUR_CONTRACT_ADDRESS'; // Replace with deployed contract address
        const abi = /* Paste the ABI of RewardTracker contract here */;

        // Initialize Web3.js and connect to MetaMask
        async function init() {
            if (window.ethereum) {
                web3 = new Web3(window.ethereum);
                await window.ethereum.enable(); // Request account access
            } else {
                alert("Please install MetaMask to use this feature.");
            }
            contract = new web3.eth.Contract(abi, contractAddress);
        }

        // Function to get latest buyer
        async function getLatestBuyer() {
            const latestBuyer = await contract.methods.latestBuyer().call();
            console.log("Latest Buyer:", latestBuyer);
        }

        // Function to update latest buyer
        async function updateLatestBuyer(address) {
            const accounts = await web3.eth.getAccounts();
            await contract.methods.updateLatestBuyer(address).send({ from: accounts[0] });
            alert('Latest Buyer Updated');
        }

        // Function to update rewards for a wallet
        async function updateRewards(wallet, amount) {
            const accounts = await web3.eth.getAccounts();
            await contract.methods.updateRewards(wallet, amount).send({ from: accounts[0] });
            alert('Rewards Updated');
        }

        // Call init function when page loads
        window.onload = init;
    </script>
